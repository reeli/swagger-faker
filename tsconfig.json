{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": ".output",
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*", "__types__/*"]
    },
    "importHelpers": false
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "exclude": ["**/__types__/*.ts"],
    "out": "docs"
  },
  "exclude": ["node_modules", "source", "**/__tests__/**"]
}
